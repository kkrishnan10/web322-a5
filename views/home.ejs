<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= destination.name %> Journal</title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body class="bg-base-200">

  
  <div class="hero min-h-screen" style="background-image: url('<%= destination.imageUrl %>');">
    <div class="hero-overlay bg-opacity-60"></div>
    <div class="hero-content text-center text-neutral-content">
      <div class="max-w-md">
        <h1 class="mb-5 text-5xl font-bold"><%= destination.name %></h1>
        <p class="mb-5"><%= destination.description %></p>
        <a href="/memories/add" class="btn btn-primary">Add a Location</a>
      </div>
    </div>
  </div>


  <div class="p-8">
    <table class="table w-full">
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Category</th>
          <th>Address</th>
          <th>Comments</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% memories.forEach(m => { %>
        <tr>
          <td><img src="<%= m.image %>" alt="<%= m.name %>" class="w-24 h-16 object-cover rounded"></td>
          <td><%= m.name %></td>
          <td><%= m.category %></td>
          <td><%= m.address %></td>
          <td><%= m.comments %></td>
          <td>
            <a href="/memories/delete/<%= m.id %>" class="btn btn-sm btn-error">Delete</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>

